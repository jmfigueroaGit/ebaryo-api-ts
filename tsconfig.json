{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"allowJs": true,
		"sourceMap": true,
		"outDir": "./dist",

		"strict": true,
		"esModuleInterop": true,

		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noErrorTruncation": true
	},
	"exclude": ["node_modules"],
	"include": ["src"]
}
